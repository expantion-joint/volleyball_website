<div class="gp-back-to-index-container">
  <div class="gp-back-to-index-button">
    <%= link_to "イベント一覧に戻る", index_post_path, class: "gp-back-to-index-button-text"%>
  </div>
</div>

<div class="post-form-body">
  <div class="post-form-container">
    <h3 class="h3">管理者用パスワードを入力してください</h3>
    <%= form_with(url: confirm_password_admin_path, local: true, method: :post, html: { class: 'post-form' }  ) do |f| %>

      <div class="form-group">
        <%= f.label "パスワード", class: 'form-label' %>
        <%= f.text_field :confirm_password, class: 'form-control' %>
      </div>

      <div class="button-group">
        <%= f.submit '送信する', class: 'gp-button gp-background-blue gp-button-text' %>
      </div>

    <% end %>
  </div>
</div>
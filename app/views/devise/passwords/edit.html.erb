<div class="device-container">
  <div class="form-container">
    <h3 class="h2">パスワードの変更手続き</h3>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <div class="gp-text-red">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>
      
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :新しいパスワード（英数字8文字以上）, class: "label" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"device-input-itme" %>
      </div>

      <div class="field">
        <%= f.label :パスワード（確認用）, class: "label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"device-input-itme" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワードを変更する" %>
      </div>
    
      <div class="link-container">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>


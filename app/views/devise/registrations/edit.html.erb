<div class="device-container">
  <div class="form-container">
    <h2 class="h2">個人情報を編集してください</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="gp-text-red">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>

      <div class="field">
        <%= f.label "氏名", class: 'form-label' %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"device-input-itme" %>
      </div>

      <div class="field">
        <%= f.label "メールアドレス", class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"device-input-itme" %>
      </div>

      <div class="field">
        <%= f.label "性別", class: 'form-label' %>
        <% choices = [["男性", "男性"], ["女性", "女性"], ["その他", "その他"]] %>
        <%= f.select :sex, options_for_select(choices, value: @user.sex), {include_blank: "選択して下さい"}, {class: "form-select-control"} %>
      </div>

      <div class="field">
        <%= f.label "生年月日", class: 'form-label' %>
        <div class="gp-flex-container">
          <%= f.date_select :birthday, {start_year: (Time.now.year - 100), end_year: (Time.now.year)}, {class: "device-input-itme-date"} %>
        </div>
      </div>

      <div class="field">
        <%= f.label "新パスワード", class: 'form-label' %>
        <%= f.password_field :password, autocomplete: "new-password", class:"device-input-itme", class:"device-input-itme"%>
        <span class="gp-font-size-14px gp-text-red">※パスワードを変更しない場合は空欄のままにしてください</span>
      </div>

      <div class="field">
        <%= f.label "新パスワード（確認用）", class: 'form-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"device-input-itme"  %>
      </div>

      <div class="actions">
        <%= f.submit "更新する" %>
      </div>
    <% end %>

    <div class="actions">
      <%= link_to 'アカウントを削除する', registration_path(resource_name), method: :delete, data: { confirm: '本当に削除しますか？' } %>
    </div>

    <!--
    <%= link_to "Back", :back %>
    -->
    
  </div>
</div>
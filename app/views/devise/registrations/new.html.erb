<div class="device-container">
  <div class="form-container">
    <h2 class="h2">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="gp-text-red">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>

      <div class="field">
        <%= f.label :氏名, class: "label"%>
        <%= f.text_field :name, class:"device-input-itme" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"device-input-itme" %>
      </div>

      <div class="field">
        <%= f.label :パスワード（英数字8文字以上）, class: "label" %>
        <%= f.password_field :password, autocomplete: "new-password", class:"device-input-itme" %>
      </div>

      <div class="field">
        <%= f.label :パスワード（確認用）, class: "label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"device-input-itme" %>
      </div>

      <div class="field">
        <%= f.label :性別, class: "label" %>
        <div class="device-input-itme-select-container">
          <%= f.select :sex, [["男性", "男性"], ["女性", "女性"], ["その他", "その他"]], {include_blank: "選択して下さい"}, {class: "device-input-itme-select"} %>
          <!--f.select :保存先のカラム名, [["選択肢１", "実際にDBに保存させる内容"], ["選択肢２", "実際にDBに保存させる内容"]], include_blank: "選択して下さい"-->
        </div>
      </div>

      <div class="field">
        <%= f.label :生年月日, class: "label" %>
        <div class="device-input-itme-birthday_year-select-container">
          <div class="device-input-itme-birthday_month-select-container">
            <div class="gp-flex-container device-input-itme-birthday_date-select-container">
              <%= f.date_select :birthday, {start_year: (Time.now.year - 100), end_year: (Time.now.year)}, {class: "device-input-itme-birthday-select"} %>
            </div>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.hidden_field :usertype, value: 11 %>
      </div>

      <div class="actions">
        <%= f.submit "登録" %>
      </div>
    <% end %>

    <div class="link-container">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

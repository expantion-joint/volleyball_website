<div class="show-button-container">
  <div class="show-button">
    <%= link_to "イベント一覧に戻る", index_post_path, class: "show-button-text"%>
  </div>
</div>

<!-- body -->
<div class="gp-index-body">

  <h2 class="gp-index-heading-2">予約イベント一覧</h2>

  <% i = 0 %>
  <% @posts.each do |post| %>
    <% order = @orders[i] %>

        <div class="gp-line"></div>
        
        <a class="gp-index-item-container" href="<%= show_post_path(post) %>">
          <div class="item-image-container">
            <% if post.image.attached? %>
              <%= image_tag(post.image, class: "item-image") %>
            <% else %>
              <%= image_tag 'sample_no_image.jpg' ,class: "item-image" %>
            <% end %>
          </div>

          <span class="gp-text-bold gp-text-black"><%= post.title %></span>
          <span class="gp-text-black">開催日時：<%= l post.event_date %><%= post.event_start_time.strftime("%H時%M分") %>〜<%= post.event_end_time.strftime("%H時%M分") %></span>
          <span class="gp-text-black">開催場所：<%= post.venue %></span>
          <span class="gp-text-black">競技：<%= post.category %></span>
          <span class="gp-text-black">参加費：<%= post.price %>円&nbsp;*&nbsp;<%= order.number_of_orders %>名</span>
          <span class="gp-text-black">予約人数：<%= order.number_of_orders %>名</span>
        </a>
      <% end %>
    <% end %>
  <% i = i + 1 %>
  <% end %>
  <div class="gp-line"></div>
</div>
